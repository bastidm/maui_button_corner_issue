        </VerticalStackLayout>
    </ScrollView>
    <Grid Grid.Row="1" InputTransparent="True" CascadeInputTransparent="False">
            <Button
                x:Name="RoundBtn"
                Text="Square shaped" 
                SemanticProperties.Hint="Counts the number of times you click"
                Clicked="OnRoundBtnClicked"
                HeightRequest="150"
                BorderColor="Aquamarine"
                BorderWidth="2"
                BackgroundColor="SkyBlue"
                WidthRequest="150"
                CornerRadius="75"/>
    </Grid>
</Grid>
